{
  "manifest_version": 2,

  "name": "FamilySearch Lead Finder",
  "description": "The intent is for this extension to help you search a tree on FamilySearch",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "declarativeContent"
  ]
}
